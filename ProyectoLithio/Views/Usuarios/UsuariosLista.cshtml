@model List<ProyectoLithio.Models.pa_Usuarios_Select_Result>
@{ ViewBag.Title = "Lista de usuarios";
                Layout = "~/Views/Shared/_LayoutCosteo.cshtml"; }
@section styles{
    <link href="~/Content/Tablas/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/Tablas/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
<h2>Lista de usuarios</h2>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table id="tablaDataTable" class="table table-striped table-bordered dt-responsive nowrap bg-white">
                <thead>
                    <tr>
                        <th>Identificador</th>
                        <th>Nombre Completo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var oListaUsuarios in this.Model)
                    {
        <tr>
            <td>@oListaUsuarios.Id_Usuario</td>
            <td>@oListaUsuarios.Nombre_Completo</td>
            <td><a href="~/Usuarios/UsuarioModifica?Id_Usuario=@oListaUsuarios.Id_Usuario" class="btn btn-success">Editar</a></td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-lg-12 text-center">
        <a href="~/Usuarios/UsuariosNuevo" class="btn btn-primary">Nuevo usuario</a>
    </div>
</div>
<br />

@section scripts{
    <script src="~/Scripts/Tablas/datatables.min.js"></script>
    <script src="~/Scripts/Tablas/mensajesGenericosDataTables.js"></script>
    <script src="~/Scripts/Panel/abrirModalVersion.js"></script>
    <script src="~/Scripts/Panel/abrirModalRespaldos.js"></script>
}


