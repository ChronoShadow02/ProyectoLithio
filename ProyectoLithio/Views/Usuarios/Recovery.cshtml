@model ProyectoLithio.Models.ViewModel.RecuperarPassViewModel
@{ Layout = null;
                var CambioPass = this.ViewBag.CambioPassword; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recuperación de contraseña</title>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <link href="~/Content/Login/styleLogin.css" rel="stylesheet" />
</head>
<body style="overflow:hidden;">
    <br />
    <h2 class="text-center">Recuperación de contraseña</h2>
    <br />
    <div class="" style="justify-content:center !important;display:flex">
        <div class="col-md-6 offset-3">
            <div style="background-color:rgba(255,255,255,0.6); padding:50px">
                <form method="post" id="frmRecuperarContraseña">
                    @Html.HiddenFor(d => d.token)
                    <div class="form-group">
                        <label><strong>Contraseña</strong></label>
                        <input type="password" value="" placeholder="Contraseña" name="Contrasena" class="form-control" id="Contrasena" />
                    </div>
                    <div class="form-group">
                        <label><strong>Confirmar contraseña</strong></label>
                        <input type="password" value="" placeholder="Contraseña" name="ContrasenaConfirmada" class="form-control" id="ContrasenaConfirmada" />
                    </div>

                    <div class="form-group">
                        @if (CambioPass==null || !CambioPass)
                        {
                            <input type="submit" value="Cambiar contraseña" class="btn btn-primary" /> 
                        }
                        else
                        {
                            <input type="submit" value="Cambiar contraseña" class="btn btn-primary" disabled />
                        }
                        <a href="~/Usuarios/UsuariosLista" class="btn btn-info">Regresar a la lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/validacionesGenericas.js"></script>
    <script src="~/Scripts/Login/validaContrasena.js"></script>
    <script src="~/Scripts/Panel/abrirModalVersion.js"></script>
    <script src="~/Scripts/Panel/abrirModalRespaldos.js"></script>
</body>
</html>

