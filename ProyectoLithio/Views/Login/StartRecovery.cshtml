
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recuperación de contraseña</title>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <link href="~/Content/Login/styleLogin.css" rel="stylesheet" />
</head>
<body style="overflow:hidden;">
    <br />
    <h2 class="text-center">Recuperación de contraseña</h2>
    <br />
    <div class="row" style="display:flex; align-content:center; justify-content:center">
        <div class="col-md-6 offset-3">
            <div style="background-color:rgba(255,255,255,0.4); padding:50px">
                <form method="post" id="frmRecuperarContraseña">
                    <div class="form-group">
                        <label><strong>Ingrese su correo electrónico</strong></label>
                        <input type="text" value="" placeholder="Correo electrónico" name="Correo_Electronico" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Enviar" class="btn btn-primary" />
                        <a href="~/Login/Index" class="btn btn-secondary">Regresar al inicio</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/validacionesGenericas.js"></script>
    <script src="~/Scripts/Login/validaCorreo.js"></script>
</body>
</html>
