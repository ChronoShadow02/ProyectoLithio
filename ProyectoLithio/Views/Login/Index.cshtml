@{ Layout = null;
                ///Constriur de URL del método del controlador
                string URLMetodoFormulario = Url.Action("VerificaLogin", "Login");

                var UsuarioLogueado = this.ViewBag.UsuarioLogueado;

                var mensaje = this.ViewBag.mensaje;

                var error = this.ViewBag.Error; 
}
<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Inicio de Sesión</title>
		<script src="~/Scripts/modernizr-2.8.3.js"></script>
		<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
			<link href="~/Content/Panel/style.css" rel="stylesheet" />
			<link href="~/Content/Panel/main.css" rel="stylesheet" />
			<script src='https://cdn.jsdelivr.net/npm/sweetalert2@10'></script>
		</head>
		<body>
			<!-- WRAPPER -->
			<div id="wrapper">
				<div class="vertical-align-wrap">
					<div class="vertical-align-middle">
						<div class="auth-box ">
							<div class="left">
								<div class="content">
									<div class="header">
										<div class="logo text-center">
											<img src="~/img/LogoDashboard.jpg" style="width:120px; height:50px;" />
										</div>
									</div>
									<form class="form-auth-small" action="@URLMetodoFormulario" method="post">
										<div class="form-group">
											<input type="text" name="Correo_Electronico" class="form-control" value="" placeholder="Usuario">
											</div>
											<div class="form-group">
												<input type="password" name="Contrasena_Usuario" class="form-control" value="" placeholder="Contraseña">
												</div>
                                @*
                                    Se muestran los mensjes que se envían desde el controlador(Usuario y contraseña no validos...)
                                    @Html.ValidationSummary("
												<script>Swal.fire({ icon: 'error',title: 'Oops...', text: 'Something went wrong!'})")
                                *@
                                @{ if (UsuarioLogueado == false)
                                                {
                                    
													<div class="alert alert-info text-center" role="alert">
                                        @Html.ValidationSummary(true)
                                    </div> }
                                                if (mensaje == "Contraseña modificada con éxito")
                                                {
                                    
													<div class="alert alert-success text-center">
                                        @ViewBag.mensaje
                                    </div> }
                                                if (error == "El token ha expirado")
                                                {
                                    
													<div class="alert alert-danger text-center">
                                        @ViewBag.error
                                    </div> } }
                                
													<button type="submit" class="btn btn-primary btn-lg btn-block">Ingresar</button>
													<div class="bottom">
														<span class="helper-text">
															<i class="fa fa-lock"></i>
															<a href="~/Login/StartRecovery">¿Olvido de contraseña?</a>
														</span>
													</div>
												</form>
											</div>
										</div>
										<div class="right">
											<div class="overlay"></div>
											<div class="content text">
												<h1 class="heading">Sistema de Costeo</h1>
												<p></p>
											</div>
										</div>
										<div class="clearfix"></div>
									</div>
								</div>
							</div>
						</div>
						<!-- END WRAPPER -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

					</body>
				</html>
