@model List<ProyectoLithio.Models.pa_Proveedores_Select_Result>
@{
    ViewBag.Title = "ProveedoresLista";
    Layout = "~/Views/Shared/_LayoutCosteo.cshtml";
}
@section styles{
    <link href="~/Content/Tablas/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/Tablas/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
<h2>Lista de proveedores</h2>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table id="tablaDataTable" class="table table-striped table-bordered dt-responsive nowrap bg-white">
                <thead>
                    <tr>
                        <th>Identificador</th>
                        <th>Código de proveedor</th>
                        <th>Nombre de proveedor</th>
                        <th>País</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var oListaProveedores in this.Model)
                    {
                        <tr>
                            <td>@oListaProveedores.Id_Proveedor</td>
                            <td>@oListaProveedores.Codigo_Proveedor</td>
                            <td>@oListaProveedores.Nombre_Proveedor</td>
                            <td>@oListaProveedores.Nombre_Pais</td>
                            <td><a href="~/Proveedores/ProveedoresModifica?Id_Proveedor=@oListaProveedores.Id_Proveedor" class="btn btn-success">Editar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-lg-12 text-center">
        <a href="~/Proveedores/ProveedoresNuevo" class="btn btn-primary">Nuevo proveedor</a>
    </div>
</div>

<br />
@section scripts{
    <script src="~/Scripts/Tablas/datatables.min.js"></script>
    <script src="~/Scripts/Tablas/mensajesGenericosDataTables.js"></script>
}


