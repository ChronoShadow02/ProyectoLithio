@model List<ProyectoLithio.Models.pa_Paises_Select_Result>
@section styles{
    <link href="~/Content/Tablas/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/Tablas/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
@{ ViewBag.Title = "Lista de Países";
    Layout = "~/Views/Shared/_LayoutCosteo.cshtml"; }

<h2>Lista de países</h2>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table id="tablaDataTable" class="table table-striped table-bordered dt-responsive nowrap bg-white">
                <thead>
                    <tr>
                        <th>Identificador</th>
                        <th>País</th>
                        <th>Sigla</th>
                        <th>Moneda</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var oListaPaises in this.Model)
                    {
        <tr>
            <td>@oListaPaises.Id_Pais</td>
            <td>@oListaPaises.Nombre_Pais</td>
            <td>@oListaPaises.Sigla_Pais</td>
            <td>@oListaPaises.Moneda_Pais</td>
            <td><a href="~/Paises/PaisModifica?Id_Pais=@oListaPaises.Id_Pais" class="btn btn-success">Editar</a></td>
        </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-lg-12 text-center">
        <a href="~/Paises/PaisesNuevo" class="btn btn-primary">Nuevo País</a>
    </div>
</div>

<br />
@section scripts{
    <script src="~/Scripts/Tablas/datatables.min.js"></script>
    <script src="~/Scripts/Tablas/mensajesGenericosDataTables.js"></script>
}