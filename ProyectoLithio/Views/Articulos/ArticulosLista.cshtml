@model List<ProyectoLithio.Models.pa_Articulos_Select_Result>
@{ ViewBag.Title = "Lista de articulos";
                Layout = "~/Views/Shared/_LayoutCosteo.cshtml"; }
@section styles{
    <link href="~/Content/Tablas/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/Tablas/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
<h2>Lista de Artículos</h2>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table id="tablaDataTable" class="table table-striped table-bordered dt-responsive nowrap bg-white">
                <thead>
                    <tr>
                        <th>Id Artículo</th>
                        <th>Código Artículo</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Costo</th>
                        <th>Costo Anterior</th>
                        <th>Proveedor</th>
                        <th>Presentación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var oListaArticulos in this.Model)
                    {
        <tr>
            <td>@oListaArticulos.Id_Articulo</td>
            <td>@oListaArticulos.Codigo_Articulo</td>
            <td>@oListaArticulos.Nombre_Articulo</td>
            <td>@oListaArticulos.Descripcion_Articulo</td>
            <td>@oListaArticulos.Costo_Articulo</td>
            <td>@oListaArticulos.Costo_Anterior_Articulo</td>
            <td>@oListaArticulos.Nombre_Proveedor</td>
            <td>@oListaArticulos.Nombre_Presentacion</td>
            <td>
                <a href="~/Articulos/ArticulosModifica?Id_Articulo=@oListaArticulos.Id_Articulo" class="btn btn-success">Editar</a>
            </td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-lg-12 text-center">
        <a href="~/Articulos/ArticulosNuevo" class="btn btn-primary">Nuevo Artículo</a>
    </div>
</div>
<br />
@section scripts{
    <script src="~/Scripts/Tablas/datatables.min.js"></script>
    <script src="~/Scripts/Tablas/mensajesGenericosDataTables.js"></script>
    <script src="~/Scripts/Panel/abrirModalVersion.js"></script>
    <script src="~/Scripts/Panel/abrirModalRespaldos.js"></script>
}